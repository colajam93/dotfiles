assets: check
ifneq (,$(wildcard *.tex))
	latexmk *.tex
endif

.PHONY: clean
clean: check
ifneq (,$(wildcard *.tex))
	latexmk -C
endif

.PHONY: check
check:
	@which perl > /dev/null
	@which latexmk > /dev/null
	@which platex > /dev/null
	@which pbibtex > /dev/null
	@which dvipdfmx > /dev/null
	@which biber > /dev/null
